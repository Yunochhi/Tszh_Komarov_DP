@using TSZH_Komarov.Viewmodels.Service

@model List<ServiceRequestsGroupViewModel>
@{
    ViewData["Title"] = "Модерация заявок служб";
}

<link rel="stylesheet" href="~/css/notify.css" asp-append-version="true" />

<div class="history-container">
    <div class="meter-history-header">
        <h1 class="history-title">Модерация заявок служб</h1>
    </div>

    @foreach (var group in Model)
    {
        <div class="service-type-group">
            <h2 class="group-title">@group.ServiceTypeName</h2>

            @foreach (var request in group.Requests)
            {
                <form method="post" class="request-card">
                    <input type="hidden" name="requestId" value="@request.ServiceRequestId" />

                    <div class="request-header">
                        <h3 class="request-id">Заявка #@request.ServiceRequestId</h3>
                        <span class="request-date">@request.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>

                    <div class="request-body">
                        <p><strong>Пользователь:</strong> @request.UserFullName </p>
                        <p><strong>Квартира:</strong> @request.Address </p>
                        @if (!string.IsNullOrEmpty(request.Note))
                        {
                            <div class="request-note">
                                <strong>Примечание:</strong>
                                <p>@request.Note</p>
                            </div>
                        }
                        <div class="status-container">
                            <span class="current-status">Текущий статус: </span>
                            <span class="status-badge @GetStatusClass(request.CurrentStatus)">@request.CurrentStatus</span>
                        </div>             
                    </div>
                    <div class="admin-comment">
                        <textarea name="adminComment"
                          placeholder="Комментарий администратора"
                          class="comment-textarea"></textarea>
                    </div>
                    <div class="request-footer">
                        <select name="newStatus" class="status-select">
                            <option value="В обработке" selected="@(request.CurrentStatus == "В обработке")">В обработке</option>
                            <option value="Выполнено" selected="@(request.CurrentStatus == "Выполнено")">Выполнено</option>
                            <option value="Отменено" selected="@(request.CurrentStatus == "Отменено")">Отменено</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Обновить статус</button>
                    </div>
                </form>
            }
        </div>
    }
</div>

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="auto-hide">@TempData["Message"]</div>
    }
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "В обработке" => "status-in-progress",
            "Выполнено" => "status-completed",
            "Отменено" => "status-cancelled",
            _ => ""
        };
    }
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #34495e;
        --accent-color: #3498db;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --background-color: #f8f9fa;
        --border-color: #dee2e6;
        --text-muted: #6c757d;
    }

    .history-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .service-note {
        margin: 10px 0;
    }

    .admin-comment {
        margin: 10px 0;
    }

    .comment-textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        min-height: 80px;
        resize: vertical;
    }
    .meter-history-header {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
        padding: 1rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .service-type-group {
        margin-bottom: 2.5rem;
    }

    .group-title {
        color: var(--primary-color);
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--accent-color);
    }

    .request-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        transition: transform 0.2s;
        margin-bottom: 1.5rem;
    }

    .request-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
    }

    .request-id {
        color: var(--primary-color);
        font-size: 1.3rem;
        margin: 0;
    }

    .request-date {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .request-body {
        margin-bottom: 20px;
    }

        .request-body p {
            margin-bottom: 10px;
            line-height: 1.5;
        }

    .status-container {
        display: flex;
        align-items: center;
        margin-top: 15px;
    }

    .current-status {
        color: var(--secondary-color);
        margin-right: 10px;
    }

    .status-badge {
        padding: 5px 12px;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-in-progress {
        background-color: rgba(243, 156, 18, 0.2);
        color: var(--warning-color);
    }

    .status-completed {
        background-color: rgba(39, 174, 96, 0.2);
        color: var(--success-color);
    }

    .status-cancelled {
        background-color: rgba(231, 76, 60, 0.2);
        color: var(--danger-color);
    }

    .request-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid var(--border-color);
    }

    .status-select {
        padding: 10px 16px;
        border-radius: 8px;
        border: 2px solid var(--border-color);
        font-size: 1rem;
        cursor: pointer;
        background-color: white;
        color: var(--secondary-color);
        width: 200px;
    }

    .btn-primary {
        background: var(--accent-color);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-primary:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

    .history-title {
        color: var(--primary-color);
        font-size: 2rem;
        margin: 0;
    }
</style>